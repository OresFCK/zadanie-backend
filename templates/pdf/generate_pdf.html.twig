{# templates/generate_pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        .header {
            font-weight: bold;
            margin-bottom: 10px;
        }
        .personal-info {
            margin-bottom: 20px;
        }
        .text-entry {
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="header">Wniosek - Dane osobowe</div>
    <div class="personal-info">
        <p><strong>Imie:</strong> {{ person.firstName }}</p>
        <p><strong>Nazwisko:</strong> {{ person.lastName }}</p>
        <p><strong>Adres:</strong> {{ person.address }}</p>
    </div>
    <div class="text-entry">
        <p>{{ textEntry.content | nl2br }}</p>
    </div>
</body>
</html>
